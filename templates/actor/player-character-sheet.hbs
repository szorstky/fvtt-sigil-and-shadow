<form class="{{cssClass}} flexcol" autocomplete="off">
    <div class="sheet-left">
        <img class="avatar" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
        {{!-- STATS --}}
        <div class="stat-box">
            <h3>{{ localize 'ACTOR.Initiative' }}</h3>
            <input name="data.initiative" type="number" value="{{data.initiative}}" data-dtype="Number" />
        </div>
        <div class="stat-box">
            <h3>{{ localize 'ACTOR.DamageResistance' }}</h3>
            <input name="data.damage_resistance" type="number" value="{{data.damage_resistance}}"
                data-dtype="Number" />
        </div>  
        <div class="stat-box">
            <h3>{{ localize 'ACTOR.DamageBonus' }}</h3>
            <div class="flexrow">
                <div class="input-cell">
                    <input name="data.damage_bonus.melee" type="text" value="{{data.damage_bonus.melee}}"
                        data-dtype="Number" />
                    <h5>{{ localize 'ACTOR.Melee' }}</h5>
                </div>
                 <div class="input-cell-spacer">
                    <p>/</p>
                </div>
                <div class="input-cell">
                    <input name="data.damage_bonus.range" type="text" value="{{data.damage_bonus.range}}"
                        data-dtype="Number" />
                    <h5>{{ localize 'ACTOR.Range' }}</h5>
                </div>
            </div>
        </div> 
        <div class="stat-box">
            <h3>{{ localize 'ACTOR.Health' }}</h3>
            <div class="flexrow">
                <div class="input-cell">
                    <input name="data.health.value" type="text" value="{{data.health.value}}" data-dtype="Number" />
                    <h5>{{ localize 'ACTOR.Current' }}</h5>
                </div>
                <div class="input-cell-spacer">
                    <p>/</p>
                </div>
                <div class="input-cell">
                    <input name="data.health.max" type="text" value="{{data.health.max}}" data-dtype="Number" />
                    <h5>{{ localize 'ACTOR.Max' }}</h5>
                </div>
            </div>
        </div>
        <div class="stat-box">
            <h3>{{ localize 'ACTOR.BonePile' }}</h3>
            <div class="flexrow">
                <div class="input-cell">
                    <input name="data.bones.value" type="number" value="{{data.bones.value}}" data-dtype="Number" />
                    <h5>{{ localize 'ACTOR.Current' }}</h5>
                </div>
                 <div class="input-cell-spacer">
                    <p>/</p>
                </div>
                <div class="input-cell">
                    <input name="data.bones.max" type="number" value="{{data.bones.max}}" data-dtype="Number" />
                    <h5>{{ localize 'ACTOR.Max' }}</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="sheet-body">
        <section class="sheet-profile">          
            <h1 class="character-name">
                <input name="name" type="text" value="{{actor.name}}" />
            </h1>
            <div class="flexrow">
                <div class="input-box">
                    <label>{{ localize 'ACTOR.Alignment' }}</label>
                    <input name="data.alignment" type="text" value="{{data.alignment}}" />
                </div>
                <div class="input-box">
                    <label>{{ localize 'ACTOR.Casting' }}</label>
                    <input name="data.casting" type="text" value="{{data.casting}}" />
                </div>
                <div class="input-box">
                    <label>{{ localize 'ACTOR.Drive' }}</label>
                    <input name="data.drive" type="text" value="{{data.drive}}" />
                </div>
            </div>
            <!-- ABILITIES -->
            <div class="flexrow">
                {{!-- STRENGHT --}}
                <div class="ability-box">
                    <h3>{{ localize 'ACTOR.Strength' }}</h3>
                    <div class="flexrow">
                        <div class="input-cell">
                            <input name="data.ability.strength.base" type="text" value="{{data.ability.strength.base}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Base' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.strength.modifier" type="text" value="{{data.ability.strength.modifier}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Modifier' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.strength.current" type="text" value="{{data.ability.strength.current}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Current' }}</h5>
                        </div>
                    </div>
                </div> 
                {{!-- DEXTERITY --}}
                <div class="ability-box">
                    <h3>{{ localize 'ACTOR.dexterity' }}</h3>
                    <div class="flexrow">
                        <div class="input-cell">
                            <input name="data.ability.dexterity.base" type="text" value="{{data.ability.dexterity.base}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Base' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.dexterity.modifier" type="text" value="{{data.ability.dexterity.modifier}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Modifier' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.dexterity.current" type="text" value="{{data.ability.dexterity.current}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Current' }}</h5>
                        </div>
                    </div>
                </div> 
                {{!-- LOGIC --}}
                <div class="ability-box">
                    <h3>{{ localize 'ACTOR.logic' }}</h3>
                    <div class="flexrow">
                        <div class="input-cell">
                            <input name="data.ability.logic.base" type="text" value="{{data.ability.logic.base}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Base' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.logic.modifier" type="text" value="{{data.ability.logic.modifier}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Modifier' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.logic.current" type="text" value="{{data.ability.logic.current}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Current' }}</h5>
                        </div>
                    </div>
                </div> 
                {{!-- WILLPOWER --}}
                <div class="ability-box">
                    <h3>{{ localize 'ACTOR.willpower' }}</h3>
                    <div class="flexrow">
                        <div class="input-cell">
                            <input name="data.ability.willpower.base" type="text" value="{{data.ability.willpower.base}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Base' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.willpower.modifier" type="text" value="{{data.ability.willpower.modifier}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Modifier' }}</h5>
                        </div>
                        <div class="input-cell-spacer">
                            <p>/</p>
                        </div>
                        <div class="input-cell">
                            <input name="data.ability.willpower.current" type="text" value="{{data.ability.willpower.current}}"
                                data-dtype="Number" />
                            <h5>{{ localize 'ACTOR.Current' }}</h5>
                        </div>
                    </div>
                </div> 
            </div>
        </section>
         {{!-- Sheet Tab Navigation --}}
        <nav class="sheet-tabs tabs full-width" data-group="primary">
            <a class="item" data-tab="bio">{{ localize 'ACTOR.Bio' }}</a>
            <a class="item" data-tab="skills">{{ localize 'ACTOR.Skills' }}</a>
            <a class="item" data-tab="perks">{{ localize 'ACTOR.Perks' }}</a>
            <a class="item" data-tab="powers">{{ localize 'ACTOR.Powers' }}</a>
            <a class="item" data-tab="equipment">{{ localize 'ACTOR.Equipment' }}</a>
            <a class="item" data-tab="notes">{{ localize 'ACTOR.Notes' }}</a>
        </nav>
        <div class="sheet-tabs-panel">
            {{!-- BACKGROUND, ODDITIES, DESCRIPTORS --}}
            <div class="tab bio" data-group="primary" data-tab="bio">
                 {{> "systems/sigil_and_shadow/templates/actor/partials/actor-background.hbs"}}
            </div>
            {{!-- SKILLS --}}
            <div class="tab skills" data-group="primary" data-tab="skills">
                {{> "systems/sigil_and_shadow/templates/actor/partials/actor-skills.hbs"}}
            </div>
            {{!-- PERKS --}}
            <div class="tab perks" data-group="primary" data-tab="perks">
                Perks
            </div>
            {{!-- POWERS --}}
            <div class="tab powers" data-group="primary" data-tab="powers">
                Perks
            </div>
            {{!-- EQUIPMENT --}}
            <div class="tab equipment" data-group="primary" data-tab="equipment">
                Equipment
            </div>
            {{!-- NOTES --}}
            <div class="tab notes" data-group="primary" data-tab="notes">
                {{ editor content=data.notes target="data.notes" owner=owner button=true editable=editable }}
            </div>
        </div>
    </div>
</form>