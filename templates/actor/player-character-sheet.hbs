<form class="{{cssClass}} flexcol" autocomplete="off">
 <!-- Sheet Header -->
        <header class="sheet-header">
            <!-- Sheet Header -->
            <img class="profile" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
            <!-- Center -->
            <div class="full-width">
                <div class="flexrow">
                    <div class="input-box charname">
                        <label>{{ localize 'ACTOR.CharacterName' }}</label>
                        <input name="name" type="text" value="{{actor.name}}"
                            placeholder="{{ localize 'ACTOR.CharacterName' }}" />
                    </div>
                    <div class="input-box">
                        <label>{{ localize 'ACTOR.Rank' }}</label>
                        <input name="data.rank" type="number" value="{{data.rank}}"
                            placeholder="{{ localize 'ACTOR.Alignment' }}" data-dtype="Number" />
                    </div>
                </div>
                <div class="flexrow">
                    <div class="input-box">
                        <label>{{ localize 'ACTOR.Alignment' }}</label>
                        <input name="data.alignment" type="text" value="{{data.alignment}}"
                            placeholder="{{ localize 'ACTOR.Alignment' }}" />
                    </div>
                    <div class="input-box">
                        <label>{{ localize 'ACTOR.Casting' }}</label>
                        <input name="data.casting" type="text" value="{{data.casting}}"
                            placeholder="{{ localize 'ACTOR.Casting' }}" />
                    </div>
                    <div class="input-box">
                        <label>{{ localize 'ACTOR.Drive' }}</label>
                        <input name="data.drive" type="text" value="{{data.drive}}"
                            placeholder="{{ localize 'ACTOR.Drive' }}" />
                    </div>
                </div>
                <div class="input-box">
                    <label>{{ localize 'ACTOR.Oddity' }}</label>
                    <input name="data.oddity" type="text" value="{{data.oddity}}"
                        placeholder="{{ localize 'ACTOR.Oddity' }}" />
                </div>
                <div class="flexrow">
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Strength' }}</h5>
                        <div>
                            <input name="data.ability.strength" type="text" value="{{data.ability.strength}}" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Dexterity' }}</h5>
                        <div>
                            <input name="data.ability.dexterity" type="text" value="{{data.ability.dexterity}}" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Logic' }}</h5>
                        <div>
                            <input name="data.ability.logic" type="text" value="{{data.ability.logic}}" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Willpower' }}</h5>
                        <div>
                            <input name="data.ability.willpower" type="text" value="{{data.ability.willpower}}" />
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="sheet-content">
            <div class="flexrow">
                <!-- COLUMN 1 -->
                <div class="left-panel">
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Initiative' }}</h5>
                        <div>
                            <input name="data.initiative" type="number" value="{{data.initiative}}" data-dtype="Number" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.DamageBonus' }}</h5>
                        <div class="flexrow">
                            <div class="input-cell">
                                <input name="data.damage_bonus.melee" type="text" value="{{data.damage_bonus.melee}}" data-dtype="Number" />
                                <h5>{{ localize 'ACTOR.Melee' }}</h5>
                            </div>
                            <div class="input-cell">
                                <input name="data.damage_bonus.range" type="text" value="{{data.damage_bonus.range}}" data-dtype="Number" />
                                <h5>{{ localize 'ACTOR.Range' }}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.DamageResistance' }}</h5>
                        <div>
                            <input name="data.damage_resistance" type="number" value="{{data.damage_resistance}}" data-dtype="Number" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Health' }}</h5>
                        <div class="flexrow">
                            <div class="input-cell">
                                <input name="data.health.value" type="text" value="{{data.health.value}}" data-dtype="Number" />
                                <h5>{{ localize 'ACTOR.Current' }}</h5>
                            </div>
                            <div class="input-cell">
                                <input name="data.health.max" type="text" value="{{data.health.max}}" data-dtype="Number" />
                                <h5>{{ localize 'ACTOR.Max' }}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.BonePile' }}</h5>
                        <div class="flexrow">
                            <div class="input-cell">
                                <input name="data.bones.value" type="number" value="{{data.bones.value}}" data-dtype="Number" />
                                <h5>{{ localize 'ACTOR.Current' }}</h5>
                            </div>
                            <div class="input-cell">
                                <input name="data.bones.max" type="number" value="{{data.bones.max}}" data-dtype="Number" />
                                <h5>{{ localize 'ACTOR.Max' }}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Background' }}</h5>
                        <div>
                            <input name="data.background" type="text" value="{{data.background}}" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Lifestyle' }}</h5>
                        <div>
                            <input name="data.lifestyle" type="text" value="{{data.lifestyle}}" />
                        </div>
                    </div>
                    <div class="resource-box">
                        <h5 class="title">{{ localize 'ACTOR.Milestones' }}</h5>
                        <div>
                            <input name="data.milestones" type="number" value="{{data.milestones}}" data-dtype="Number" />
                        </div>
                    </div>
                </div>
               <!-- COLUMN 2-->
               <div class="center-panel full-width">
               
               </div>
            </div>
        </div>
    </form>