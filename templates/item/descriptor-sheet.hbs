<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <h4>{{ localize "ITEM.DescriptorName" }}</h4>
        <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/>
    </header>
    <div class="sheet-content">     
        <h4>{{ localize "ITEM.DescriptorKind" }}</h4>   
        <select name="data.kind">
            {{#select data.kind}}
            {{#each config.actorDescriptorKinds as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
</form>