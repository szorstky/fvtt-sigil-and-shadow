<form class="{{cssClass}} equipment-sheet" autocomplete="off">
    <header class="sheet-header">
        <div class="flexrow">
            <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
            <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="180" width="180"/>
        </div>
    </header>
    <div class="sheet-content">
         <textarea rows="3" name="data.description">{{data.description}}</textarea> 
    </div>
</form>